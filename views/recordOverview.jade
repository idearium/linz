extends layout

block content
	h1= record.title
		span
			.btn-group.pull-right
				a.btn.btn-primary(href='/admin/#{model.modelName}/#{record._id}/edit') Edit
				a.btn.btn-default(href='/admin/model/#{model.modelName}/list') View all #{model.label}
	ul
		each val, index in model.schema.paths
			li= index + ': ' + record[index]
