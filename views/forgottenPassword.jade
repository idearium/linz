extends layout-preauth

block content
	.centered.login.col-md-6.col-sm-6.col-xs-12
		h1 Forgot your password?
		form(role='form', method='post')
			if success
				| Your new password has been sent to your email address <strong>#{email}</strong>.
			else
				.form-group
					label(for='email') Email address
					input.form-control(type='email', id='email', name='email', placeholder='Enter your email...', required, data-bv-message='Invalid email address')
				button.btn.btn-primary(type='submit') Retrieve password

block script
	script.
		$('form').bootstrapValidator({});
